            </div>
            <div class="form-group">
                <label class="control-label">Location</label>
                <input asp-for="ApptLocation" class="form-control" />
                <span asp-validation-for="ApptLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Duration</label>
                <input asp-for="ApptDuration" class="form-control" />
                <span asp-validation-for="ApptDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Notes</label>
                <input asp-for="ApptNotes" class="form-control" />
